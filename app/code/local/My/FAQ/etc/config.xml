<?xml version="1.0" ?>
<config>
    <modules>
        <My_FAQ>
            <version>1.0.0</version>
        </My_FAQ>
    </modules>
    <!-- Code for the frontend -->
    <frontend>
        <routers>
            <mfaq>
                <use>standard</use>
                <args>
                    <module>My_FAQ</module>
                    <frontName>faq</frontName>
                </args>
            </mfaq>
        </routers>
    </frontend>
    <global>
        <models>
            <faq>
                <class>My_FAQ_Model</class>
                <resourceModel>faq_recource</resourceModel>
            </faq>
            <faq_recource>
                <class>My_FAQ_Model_Resource</class>
                <entities>
                    <table_faq>
                        <table>my_faq</table>
                    </table_faq>
                </entities>
            </faq_recource>
        </models>
        <resources>
            <faq_setup>
                <setup>
                    <module>My_FAQ</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </faq_setup>
            <faq_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </faq_write>
            <faq_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </faq_read>
        </resources>
        <blocks>
            <my_faq>
                <class>My_FAQ_Block</class>
            </my_faq>
        </blocks>
        <helpers>
            <my_faq>
                <class>My_FAQ_Helper</class>
            </my_faq>
        </helpers>
    </global>
    <!-- Код для админки -->
    <admin>
        <routers>
            <faq_admin>
                <use>admin</use>
                <args>
                    <module>My_FAQ</module>
                    <frontName>my_faq_admin</frontName>
                </args>
            </faq_admin>
        </routers>
    </admin>
    <!-- Код для меню админки -->
    <adminhtml>
        <menu>
            <my_faq module="my_faq">
                <title>Faq settings|</title>
                <sort_order>77</sort_order>
                <action>faq_admin/adminhtml_faq</action>
            </my_faq>
        </menu>
    </adminhtml>
</config>